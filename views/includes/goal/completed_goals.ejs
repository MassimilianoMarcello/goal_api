<h1 class="text-3xl font-bold text-center  mt-2 text-gray-800">Completed Goals</h1>
<div class="min-h-screen flex items-center justify-center bg-gray-100">


   

<% if (completedGoals.length > 0) { %>
    <ul class="space-y-4">
        <% completedGoals.forEach(function(goal) { %>
            <li class="bg-white shadow-md rounded-lg p-4 flex flex-col md:flex-row justify-between items-start md:items-center">
                <div>
                    <h2 class="text-lg  text-gray-900"><%= goal.name %></h2>
                    <p class="text-gray-600"><%= goal.description %></p>
                    <form action="/api/delete/<%= goal.id %>?_method=DELETE" method="POST" class="delete-form">
                        <input type="hidden" name="redirect" value="completed_goals"> <!-- Cambia il valore a seconda della pagina -->
                        <button type="submit" style="background-color: red;">Delete</button>
                    </form>
                    
                </div>
                <div class="mt-2 md:mt-0">
                    <span class="inline-block bg-green-500 text-white text-sm font-semibold px-3 py-1 rounded-full">Completed</span>
                </div>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p class="text-center text-gray-500 mt-6">No completed goals found</p>
<% } %>
</div>






